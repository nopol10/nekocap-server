{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2016",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "outDir": "dist/js",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/*"],
      "@/*": ["../nekocap/src/*"]
    }
  },
  "include": ["src/**/*"]
}
